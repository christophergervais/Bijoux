{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Accueil {% endblock %}

{% block TitrePage %}
    Accueil
    {% endblock %}


{% block body %}


{% for message in app.flashes('success') %}
    <div class = "row mt-3 justify-content-center">
        <div class = "alert alert-success col-md-6 text-center">
            {{ message }}
        </div>
    </div> 
{% endfor %}

{% for message in app.flashes('error') %}
    <div class = "row mt-3 justify-content-center">
        <div class = "alert alert-danger col-md-6 text-center">
            {{ message }}
        </div>
    </div> 
{% endfor %}

<div class = "row justify-content-between">
    {% for produit in produits %}
    <div class="col-md-4">
        <div class="card" style="width: 18rem;">
            <img src="{{asset('upload/')}}{{produit.picture}}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{produit.title}}</h5>
                <p class="card-text">{{produit.description}}</p>
                <h5 class="card-title">{{produit.price}} â‚¬</h5>

                <a href="#" class="btn btn-primary">Ajouter au panier</a>
            </div>
        </div>
    </div>

        
    {% endfor %}
</div>

    

{% endblock %}
